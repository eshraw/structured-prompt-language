{
  "name": "structured-prompt-language",
  "publisher": "eshraw",
  "displayName": "Structured Prompt Language",
  "description": "Syntax highlighting for the structured prompt language",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "spl",
        "aliases": [
          "Structured Prompt Language",
          "spl"
        ],
        "extensions": [
          ".spl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "spl",
        "scopeName": "source.spl",
        "path": "./syntaxes/spl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "spl",
        "path": "./snippets/spl.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eshraw/structured-prompt-language"
  }
}
